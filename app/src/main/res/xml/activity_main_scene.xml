<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bar_back"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="#212d3b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/logo_rec"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:shapeAppearanceOverlay="@style/circular"
            android:background="@drawable/the_chance_logo"
            app:layout_constraintEnd_toEndOf="@+id/bar_back"
            app:layout_constraintStart_toStartOf="@+id/bar_back"
            app:layout_constraintTop_toTopOf="@+id/bar_back"
            app:layout_constraintHorizontal_bias="0.0" />


        <Constraint
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/linear_color_top"
            app:layout_constraintEnd_toEndOf="@+id/bar_back"
            app:layout_constraintStart_toStartOf="@+id/bar_back"
            app:layout_constraintTop_toTopOf="@id/bar_back" />

        <Constraint
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="@id/bar_back"
            app:layout_constraintTop_toTopOf="@id/bar_back" />

        <Constraint
            android:id="@+id/vec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="@id/bar_back"
            app:layout_constraintTop_toTopOf="@id/bar_back" />

        <Constraint
            android:id="@+id/text_the_chance"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="16dp"
            android:text="@string/the_chance"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bar_back"
            app:layout_constraintEnd_toEndOf="@+id/bar_back"
            app:layout_constraintStart_toStartOf="@id/bar_back" />

        <Constraint
            android:id="@+id/text_subscribers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingBottom="18dp"
            android:text="@string/_812_subscriber"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/text_the_chance"
            app:layout_constraintEnd_toEndOf="@+id/text_the_chance"
            app:layout_constraintStart_toStartOf="@+id/text_the_chance" />
        <Constraint
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/nestedscroll"
            app:layout_constraintTop_toBottomOf="@+id/bar_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="320dp" />
        <Constraint
            android:id="@+id/shadow2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/linear_color"
            app:layout_constraintBottom_toBottomOf="@+id/bar_back"
            app:layout_constraintEnd_toEndOf="@+id/bar_back"
            app:layout_constraintStart_toStartOf="@id/bar_back"/>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/bar_back"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#212d3b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/logo_rec"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/the_chance_logo"
            app:layout_constraintBottom_toBottomOf="@+id/bar_back"
            app:layout_constraintStart_toStartOf="@+id/bar_back" />


        <Constraint
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="@+id/bar_back"
            app:layout_constraintTop_toTopOf="@+id/bar_back" />

        <Constraint
            android:id="@+id/vec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="@+id/bar_back"
            app:layout_constraintTop_toTopOf="@+id/bar_back" />

        <Constraint
            android:id="@+id/text_the_chance"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="80dp"
            android:fontFamily="sans-serif-condensed-light"
            android:paddingLeft="16dp"
            android:text="The Chance"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bar_back"
            app:layout_constraintEnd_toEndOf="@+id/bar_back"
            app:layout_constraintStart_toEndOf="@+id/logo_rec"
            android:layout_marginStart="80dp" />

        <Constraint
            android:id="@+id/text_subscribers"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:paddingLeft="20dp"
            android:paddingTop="42dp"
            android:text="812 subscriber"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@+id/text_the_chance"
            app:layout_constraintStart_toEndOf="@+id/logo_rec"
            android:layout_marginStart="80dp"
            android:layout_marginTop="55dp" />
        <Constraint
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/nestedscroll"
            app:layout_constraintTop_toBottomOf="@+id/bar_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="160dp" />
        <Constraint
            app:layout_constraintEnd_toEndOf="@+id/bar_back"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="@id/bar_back"
            app:layout_constraintStart_toStartOf="@+id/bar_back"
            android:id="@+id/shadow"
            android:layout_marginTop="-80dp" />
        <Constraint
            android:id="@+id/shadow2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/linear_color"
            app:layout_constraintBottom_toBottomOf="@+id/bar_back"
            app:layout_constraintEnd_toEndOf="@+id/bar_back"
            android:layout_marginEnd="313dp" />


    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" >
        <OnSwipe
            app:touchAnchorId="@id/nestedscroll"
            app:dragDirection="dragUp" />
    </Transition>

</MotionScene>
